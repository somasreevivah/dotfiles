
if type zathura &> /dev/null; then
  PDF_VIEWER="zathura --fork"
elif type mupdf &> /dev/null; then
  PDF_VIEWER="mupdf"
else
  PDF_VIEWER="xdg-open"
fi

PS_VIEWER="zathura --fork"
TEXT_VIEWER="vim"
CONFIG_FILE="$HOME/.librc"
VIDEO_VIEWER="mpv"
MUSIC_VIEWER="mplayer"


registerCommand cmd

cmd_SEARCHER=listCommands
cmd_ACTION=runCommand
#cmd_PICKER=${default_PICKER}

runCommand() {
  read cmd
  if [[ -n $cmd ]]; then
    # do $0 for i3/config
    ${0} -d \
      "default_PICKER=${default_PICKER}" $cmd
  fi
}

# Papers stuff
registerCommand pap
registerCommand misc

pap_PATH=$(papis config general.dir)
misc_PATH=$(papis config misc.dir)

pap_SEARCHER=papSearcher
pap_ACTION=papAction
misc_SEARCHER="papSearcher misc"
misc_ACTION="papAction misc"

papSearcher(){
  local lib=${1:-general}
  papis --lib ${lib} list | xargs -n1 basename
}

papAction(){
  local lib=${1:-general}
  local name
  read -r name
  rifle $(papis --lib ${lib} list --file ${name})
}

# Software
registerCommand soft
soft_PATH=~/software/

# Videos
registerCommand vid
vid_PATH=~/Videos/

# Music
registerCommand mus
mus_PATH=~/Music/

# Bash History
registerCommand his
his_PATH=~/.bash_history
his_SEARCHER=historySearcher
his_ACTION=historyAction

historyAction (){
  local cmd
  read -r cmd
  eval "${cmd}"
}

historySearcher(){
  cat $his_PATH \
    | sed '/^[\.-]*$/d'\
    | sed '/^\s*$/d'\
    | sed '/#.*/d'\
    | sort \
    | uniq
}


