
PDF_VIEWER="zathura --fork"
PS_VIEWER="zathura --fork"
TEXT_VIEWER="vim"
PDF_VIEWER="zathura --fork"
CONFIG_FILE="$HOME/.librc"
VIDEO_VIEWER="mpv"
MUSIC_VIEWER="mplayer"



# Papers stuff
registerCommand pap
pap_PATH=~/Documents/marcus_notes/

# Software
registerCommand soft
soft_PATH=~/software/

# Videos
registerCommand vid
vid_PATH=~/Videos/

# Music
registerCommand mus
mus_PATH=~/Music/

# Bash History
registerCommand his
his_PATH=~/.bash_history
his_SEARCHER=historySearcher
his_ACTION=historyAction

historyAction (){
  local cmd
  read -r cmd
  eval "${cmd}"
}

historySearcher(){
  cat $his_PATH \
    | sed '/^[\.-]*$/d'\
    | sed '/^\s*$/d'\
    | sed '/#.*/d'\
    | sort \
    | uniq
}


