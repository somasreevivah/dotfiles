
PDF_VIEWER="zathura --fork"
PS_VIEWER="zathura --fork"
TEXT_VIEWER="vim"
PDF_VIEWER="zathura --fork"
CONFIG_FILE="$HOME/.librc"
VIDEO_VIEWER="mpv"
MUSIC_VIEWER="mplayer"


registerCommand cmd

cmd_SEARCHER=listCommands
cmd_ACTION=runCommand
#cmd_PICKER=${default_PICKER}

runCommand() {
  read cmd
  if [[ -n $cmd ]]; then
    # do $0 for i3/config
    ${0} -d \
      "default_PICKER=${default_PICKER}" $cmd
  fi
}

# Papers stuff
registerCommand pap
pap_PATH=~/Documents/papers/

# Software
registerCommand soft
soft_PATH=~/software/

# Videos
registerCommand vid
vid_PATH=~/Videos/

# Music
registerCommand mus
mus_PATH=~/Music/

# Bash History
registerCommand his
his_PATH=~/.bash_history
his_SEARCHER=historySearcher
his_ACTION=historyAction

historyAction (){
  local cmd
  read -r cmd
  eval "${cmd}"
}

historySearcher(){
  cat $his_PATH \
    | sed '/^[\.-]*$/d'\
    | sed '/^\s*$/d'\
    | sed '/#.*/d'\
    | sort \
    | uniq
}


