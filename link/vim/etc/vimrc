function! ReplaceYankedTextWithInput()
  let word_to_replace = input("Replace it by:")
  exec "%s/".@"."/".word_to_replace."/gc"
endfunction
nnoremap <localleader>ry :call ReplaceYankedTextWithInput()<cr>

