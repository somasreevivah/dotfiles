extends html


snippet bs3-list-group:badges "" b

<ul class="list-group">
	<li class="list-group-item">
		<span class="badge">5</span>
		Item 1
	</li>
	<li class="list-group-item">
		<span class="badge">10</span>
		Item 2
	</li>
	<li class="list-group-item">
