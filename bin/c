#! /usr/bin/env bash


__SCRIPT_VERSION="0.0.1"
__SCRIPT_NAME=$( basename $0 )
__DESCRIPTION="A super simple fuzzy 'cd' command using the fuzzy finder 'f'"


function usage_head() { echo "Usage :  $__SCRIPT_NAME [-h|-help] [-v|-version]"; }
function usage ()
{
cat <<EOF
$(usage_head)

    $__DESCRIPTION

    Options:
    -h|help       Display this message
    -v|version    Display script version
    -p            Path to search, default is current directory


    This program is maintained by Alejandro Gallo.
EOF
}    # ----------  end of function usage  ----------

while getopts ":hvp:" opt
do
  case $opt in

  h|help     )  usage; exit 0   ;;

  v|version  )  echo "$__SCRIPT_NAME -- Version $__SCRIPT_VERSION"; exit 0   ;;

  p )
    PATH_TO_SEARCH=$OPTARG
    ;;

  * )  echo -e "\n  Option does not exist : $OPTARG\n"
      usage_head; exit 1   ;;

  esac    # --- end of case ---
done
shift $(($OPTIND-1))

SEARCH_NAMES=$@

OUTPUT=$(f $SEARCH_NAMES)


FOLDERS=
for file in $OUTPUT; do
  [[ -d $file ]] && FOLDERS="$FOLDERS $file"
done

NUMBER_OF_LINES=$(echo $FOLDERS | tr " " "\n" | wc -l)

if [[ $NUMBER_OF_LINES = 1 ]]; then
  for folder in $FOLDERS; do
    echo $FOLDERS
    cd $folder
    exit 0
  done
else
  PS3="Where to go: "
  select folder in $FOLDERS; do
    echo "You have selected $folder"
    cd $folder
    exit 0
  done
fi
